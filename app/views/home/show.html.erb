<div class="p-5 my-14 mx-auto grid w-9/12">
  <div class="grid grid-cols-1 gap-4">
    <%= form_with model: @game, local: true do |form| %>
      <%= form.button class: "focus:outline-none w-full relative flex items-center space-x-3 rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:border-gray-400" do %>
        <span class="text-sm font-medium text-gray-900">Start Game</span>
      <% end %>
    <% end %>

    <%= link_to games_path, class: "focus:outline-none relative flex items-center space-x-3 rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:border-gray-400" do %>
      <p class="text-sm font-medium text-gray-900">Join Game</p>
    <% end %>
  </div>
</div>

